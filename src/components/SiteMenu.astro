    $('.rand-hue').each((i,el)=>{
        const $el = $(el);
        const bg = $el.data('bg') as string;
        if (bg) {
            $el.css('background', bg.replaceAll('?', ''+utils.lcg.next(0, 360)));
        }
        const fg = $el.data('fg') as string;
        if (fg) {
            $el.css('color', fg.replaceAll('?', ''+utils.lcg.next(0, 360)));
